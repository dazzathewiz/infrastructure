# https://docs.technotim.live/posts/rancher-ha-install/

brew install helm
helm repo add rancher-stable https://releases.rancher.com/server-charts/stable
kubectl create namespace cattle-system

# install certmanager -> https://cert-manager.io/docs/installation/helm/
helm repo add jetstack https://charts.jetstack.io
helm repo update
kubectl apply -f https://github.com/cert-manager/cert-manager/releases/download/v1.9.1/cert-manager.crds.yaml

kubectl create namespace cert-manager
helm install \
  cert-manager jetstack/cert-manager \
  --namespace cert-manager \
  --version v1.9.1

helm install rancher rancher-stable/rancher \
--namespace cattle-system \
--set hostname=rancher.dazzathewiz.com


helm ls -A
helm uninstall rancher -n cattle-system

helm uninstall rancher -n cattle-system 


# https://docs.technotim.live/posts/kube-traefik-cert-manager-le/
# Install a traefik ingress

helm repo add traefik https://helm.traefik.io/traefik
helm repo update

kubectl create namespace traefik
